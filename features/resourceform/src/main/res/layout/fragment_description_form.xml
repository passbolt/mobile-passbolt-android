<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.passbolt.mobile.android.core.ui.toolbar.defaulttoolbar.TitleToolbar
        android:id="@+id/toolbar"
        style="@style/Heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_8"
        android:textSize="@dimen/sp_16"
        android:theme="@style/Theme.Passbolt.Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:toolbarTitle="@string/resource_form_metadata_description" />

    <com.passbolt.mobile.android.feature.resourceform.subform.description.MetadataDescriptionSubformView
        android:id="@+id/metadataDescriptionSubformView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16" />

</LinearLayout>
