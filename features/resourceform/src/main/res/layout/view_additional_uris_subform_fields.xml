<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.LinearLayout">

    <com.passbolt.mobile.android.core.ui.textinputfield.TextInputView
        android:id="@+id/mainUriInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputHint="@string/resource_form_enter_uri"
        app:inputTitle="@string/resource_form_main_uri" />

    <TextView
        android:id="@+id/additionalUrisLabel"
        style="@style/Section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/resource_form_additional_uris"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/additionalUrisContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/addUriButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_24"
        android:backgroundTint="@color/divider"
        android:drawableEnd="@drawable/ic_plus"
        android:text="@string/resource_form_add_uri"
        android:textColor="@color/text_primary" />
</merge>
