{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "password",
    "totp"
  ],
  "properties": {
    "object_type": {
      "const": "PASSBOLT_SECRET_DATA"
    },
    "password": {
      "anyOf": [
        {
          "type": "string",
          "maxLength": 4096
        },
        {
          "type": "null"
        }
      ]
    },
    "description": {
      "anyOf": [
        {
          "type": "string",
          "maxLength": 50000
        },
        {
          "type": "null"
        }
      ]
    },
    "totp": {
      "type": "object",
      "required": [
        "secret_key",
        "digits",
        "algorithm"
      ],
      "properties": {
        "algorithm": {
          "type": "string",
          "minLength": 4,
          "maxLength": 6
        },
        "secret_key": {
          "type": "string",
          "maxLength": 1024
        },
        "digits": {
          "type": "number",
          "minimum": 6,
          "maximum": 8
        },
        "period": {
          "type": "number"
        }
      }
    },
    "custom_fields": {
      "type": "array",
      "maxItems": 128,
      "items": {
        "type": "object",
        "required": [
          "id",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "type": "string",
            "enum": [
              "text",
              "password",
              "boolean",
              "number",
              "uri"
            ]
          },
          "secret_key": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 255
              },
              {
                "type": "null"
              }
            ]
          },
          "secret_value": {
            "anyOf": [
              {
                "type": "string",
                "maxLength": 20000
              },
              {
                "type": "number"
              },
              {
                "type": "boolean"
              },
              {
                "type": "null"
              }
            ]
          }
        }
      }
    }
  }
}
