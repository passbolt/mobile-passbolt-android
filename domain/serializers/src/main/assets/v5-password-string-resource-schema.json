{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 255
    },
    "username": {
      "type": "string",
      "maxLength": 255,
      "nullable": true
    },
    "uris": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 1024,
        "nullable": true
      }
    },
    "description": {
      "type": "string",
      "maxLength": 10000,
      "nullable": true
    }
  }
}
