<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextInputView">
        <attr name="inputTitle"
            format="string" />
        <attr name="inputHint"
            format="string" />
        <attr name="inputIsRequired"
            format="boolean" />
    </declare-styleable>
    <declare-styleable name="ResultView">
        <attr name="resultTitle"
            format="string" />
        <attr name="resultDescription"
            format="string" />
        <attr name="resultIcon"
            format="reference" />
    </declare-styleable>
    <declare-styleable name="TitleToolbar">
        <attr name="toolbarTitle"
            format="string" />
    </declare-styleable>
    <declare-styleable name="SettingView">
        <attr name="icon"
            format="reference" />
        <attr name="name"
            format="string" />
    </declare-styleable>
    <declare-styleable name="DropDownInputView">
        <attr name="dropdownTitle"
            format="string" />
        <attr name="dropdownIsRequired"
            format="boolean" />
    </declare-styleable>
    <declare-styleable name="LabelledText">
        <attr name="labelledText_label"
            format="string" />
        <attr name="labelledText_text"
            format="string" />
        <attr name="labelledText_use_monospace_font"
            format="boolean" />
    </declare-styleable>
    <declare-styleable name="ItemWithHeaderAndActionView">
        <attr name="itemWithHeaderAndActionView_shouldUseWebLink"
            format="boolean" />
        <attr name="itemWithHeaderAndActionView_isValueSecret"
            format="boolean" />
        <attr name="itemWithHeaderAndActionView_title"
            format="string" />
        <!-- Corresponds with com.passbolt.mobile.android.core.ui.itemwithheaderandaction.Action -->
        <attr name="itemWithHeaderAndActionView_action"
            format="enum">
            <enum name="NONE"
                value="0" />
            <enum name="VIEW"
                value="1" />
            <enum name="COPY"
                value="2" />
        </attr>
    </declare-styleable>
</resources>
