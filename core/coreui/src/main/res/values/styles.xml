<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInput"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorTextAppearance">@style/TextInputErrorTextAppearance</item>
        <item name="boxStrokeColor">@drawable/input_text_selector</item>
        <item name="boxBackgroundColor">@color/input_box_interior</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
    </style>

    <style name="TextInputErrorTextAppearance"
        parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="TextInputTextAppearance"
        parent="@android:style/TextAppearance">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PrimaryButton"
        parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/ButtonBigText</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="PrimaryBlueButton"
        parent="PrimaryButton">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="ButtonBigText">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="ButtonSmallText">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Section">
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Heading">
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="Heading1Text"
        parent="Heading">
        <item name="android:textSize">@dimen/sp_24</item>
    </style>

    <style name="Heading2Text"
        parent="Heading">
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="Heading3Text"
        parent="Heading">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Heading4Text"
        parent="Heading">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="BodyText">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Body2Text">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="ValueText">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="SecretText">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/inconsolata</item>
    </style>

    <style name="BodyLight"
        parent="BodyText">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="PasswordMenuItem"
        parent="Heading4Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:textColor">@color/menu_item_selector</item>
    </style>

    <style name="FullscreenDialogTheme"
        parent="Theme.Passbolt">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="PrimarySwitch"
        parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/selector_primary_switch</item>
        <item name="trackTint">@color/selector_primary_track_switch</item>
    </style>
</resources>
