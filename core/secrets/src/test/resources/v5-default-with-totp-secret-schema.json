{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "password",
    "totp"
  ],
  "properties": {
    "password": {
      "type": "string",
      "maxLength": 4096
    },
    "description": {
      "anyOf": [
        {
          "type": "string",
          "maxLength": 10000
        },
        {
          "type": "null"
        }
      ]
    },
    "totp": {
      "type": "object",
      "required": [
        "secret_key",
        "digits",
        "algorithm"
      ],
      "properties": {
        "algorithm": {
          "type": "string",
          "minLength": 4,
          "maxLength": 6
        },
        "secret_key": {
          "type": "string",
          "maxLength": 1024
        },
        "digits": {
          "type": "number",
          "minimum": 6,
          "maximum": 8
        },
        "period": {
          "type": "number"
        }
      }
    }
  }
}
